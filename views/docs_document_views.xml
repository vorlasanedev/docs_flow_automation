<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document List View -->
    <record id="view_docs_document_tree" model="ir.ui.view">
        <field name="name">docs.document.tree</field>
        <field name="model">docs.document</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'" decoration-muted="state == 'archived'">
                <field name="name"/>
                <field name="doc_number" optional="show"/>
                <field name="subject"/>
                <field name="document_type"/>
                <field name="department_id"/>
                <field name="origin_id" optional="show"/>
                <field name="assigned_user_id"/>
                <field name="received_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'" decoration-muted="state == 'archived'"/>
            </list>
        </field>
    </record>

    <!-- Document Form View -->
    <record id="view_docs_document_form" model="ir.ui.view">
        <field name="name">docs.document.form</field>
        <field name="model">docs.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_whatsapp" string="Send WhatsApp" type="object" class="oe_highlight" icon="fa-whatsapp" invisible="not contact_whatsapp"/>
                    <button name="action_assign" string="Assign" type="object" class="oe_highlight" invisible="state != 'draft' or not assigned_user_id"/>
                    <button name="action_complete" string="Mark as Completed" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_archive_document" string="Archive" type="object" invisible="state == 'archived'"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="subject" placeholder="Document Subject"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="doc_number"/>
                            <field name="origin_id" options="{'no_create': True}"/>
                            <field name="document_type" widget="radio"/>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="folder_id" domain="[('department_id', '=', department_id)]"/>
                            <field name="received_date"/>
                        </group>
                        <group>
                            <field name="assigned_user_id"/>
                            <field name="assigned_date" readonly="1" invisible="not assigned_date"/>
                            <field name="completed_date" readonly="1" invisible="not completed_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="description" placeholder="Document description or notes..."/>
                            </group>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Contact Information">
                            <group>
                                <field name="contact_email" widget="email"/>
                                <field name="contact_whatsapp" placeholder="+856XXXXXXXXX"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Document Kanban View -->
    <record id="view_docs_document_kanban" model="ir.ui.view">
        <field name="name">docs.document.kanban</field>
        <field name="model">docs.document</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="subject"/>
                <field name="document_type"/>
                <field name="department_id"/>
                <field name="assigned_user_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle"><field name="subject"/></span>
                                    </div>
                                    <span class="badge" t-att-class="record.document_type.raw_value == 'incoming' ? 'badge-info' : 'badge-warning'">
                                        <field name="document_type"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="department_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="assigned_user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Document Search View -->
    <record id="view_docs_document_search" model="ir.ui.view">
        <field name="name">docs.document.search</field>
        <field name="model">docs.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="subject"/>
                <field name="department_id"/>
                <field name="assigned_user_id"/>
                <separator/>
                <filter string="My Documents" name="my_documents" domain="[('is_assigned_to_me', '=', True)]"/>
                <filter string="Incoming" name="incoming" domain="[('document_type', '=', 'incoming')]"/>
                <filter string="Outgoing" name="outgoing" domain="[('document_type', '=', 'outgoing')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Archived" name="archived" domain="[('state', '=', 'archived')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_user_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_docs_document_all" model="ir.actions.act_window">
        <field name="name">All Documents</field>
        <field name="res_model">docs.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_group_state': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_docs_document_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_docs_document_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_docs_document_form')})]"/>
    </record>

    <record id="action_docs_document_incoming" model="ir.actions.act_window">
        <field name="name">Incoming Documents</field>
        <field name="res_model">docs.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('document_type', '=', 'incoming')]</field>
        <field name="context">{'default_document_type': 'incoming', 'search_default_group_state': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_docs_document_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_docs_document_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_docs_document_form')})]"/>
    </record>

    <record id="action_docs_document_outgoing" model="ir.actions.act_window">
        <field name="name">Outgoing Documents</field>
        <field name="res_model">docs.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('document_type', '=', 'outgoing')]</field>
        <field name="context">{'default_document_type': 'outgoing', 'search_default_group_state': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_docs_document_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_docs_document_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_docs_document_form')})]"/>
    </record>

    <record id="action_docs_document_my" model="ir.actions.act_window">
        <field name="name">My Documents</field>
        <field name="res_model">docs.document</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_my_documents': 1, 'search_default_group_state': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_docs_document_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_docs_document_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_docs_document_form')})]"/>
    </record>
</odoo>
