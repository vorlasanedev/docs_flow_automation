<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="module_docs_categories" model="ir.module.category">
            <field name="name">Document Automation</field>
            <field name="description">Access levels for Document Flow Automation</field>
            <field name="sequence">100</field>
        </record>

        <record id="module_docs_category" model="ir.module.category">
            <field name="name">Duty / Position</field>
            <field name="description">User Duty/Position</field>
            <field name="parent_id" ref="module_docs_categories"/>
            <field name="sequence">1</field>
        </record>

        <!-- Employee/User Group -->
        <record id="group_docs_user" model="res.groups">
            <field name="name">Employee</field>
            <field name="category_id" ref="module_docs_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Reception Group -->
        <record id="group_docs_reception" model="res.groups">
            <field name="name">Reception</field>
            <field name="category_id" ref="module_docs_category"/>
            <field name="implied_ids" eval="[(4, ref('group_docs_user'))]"/>
        </record>

        <!-- Head of Department Group -->
        <record id="group_docs_head" model="res.groups">
            <field name="name">Head of Department</field>
            <field name="category_id" ref="module_docs_category"/>
            <field name="implied_ids" eval="[(4, ref('group_docs_reception'))]"/>
        </record>

        <!-- Administrator Group -->
        <record id="group_docs_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_docs_category"/>
            <field name="implied_ids" eval="[(4, ref('group_docs_head'))]"/>
        </record>
        
        <!-- Employee: Can only see documents assigned to them or created by them -->
        <record id="rule_docs_document_employee" model="ir.rule">
            <field name="name">Employee: Own Documents</field>
            <field name="model_id" ref="model_docs_document"/>
            <field name="domain_force">['|', ('assigned_user_id', '=', user.id), ('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_docs_user'))]"/>
        </record>

        <!-- Reception: Can see all documents -->
        <record id="rule_docs_document_reception" model="ir.rule">
            <field name="name">Reception: All Documents</field>
            <field name="model_id" ref="model_docs_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_docs_reception'))]"/>
        </record>

        <!-- Head: Can see all documents -->
        <record id="rule_docs_document_head" model="ir.rule">
            <field name="name">Head: All Documents</field>
            <field name="model_id" ref="model_docs_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_docs_head'))]"/>
        </record>

        <!-- Administrator: Full access (no rule needed, base.group_system has access) -->

        <!-- Record Rules for Folders -->
        
        <!-- Employee: Can only see folders created by them -->
        <record id="rule_docs_folder_employee" model="ir.rule">
            <field name="name">Employee: Own Folders</field>
            <field name="model_id" ref="model_docs_folder"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_docs_user'))]"/>
        </record>

        <!-- Reception: Can see all folders -->
        <record id="rule_docs_folder_reception" model="ir.rule">
            <field name="name">Reception: All Folders</field>
            <field name="model_id" ref="model_docs_folder"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_docs_reception'))]"/>
        </record>

        <!-- Head: Can see all folders -->
        <record id="rule_docs_folder_head" model="ir.rule">
            <field name="name">Head: All Folders</field>
            <field name="model_id" ref="model_docs_folder"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_docs_head'))]"/>
        </record>
    </data>
</odoo>
